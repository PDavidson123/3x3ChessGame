<Configuration status="debug">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n}"/>
        </Console>
    </Appenders>
    <Loggers>
        <logger name="database.jpa.DBTools" additivity="false" >
            <AppenderRef ref="Console" />
        </logger>
        <logger level="all" name="game.Play" additivity="false">
            <AppenderRef ref="Console" />
        </logger>
        <logger level="all" name="game.FXMLController" additivity="false">
            <AppenderRef ref="Console" />
        </logger>
    </Loggers>
</Configuration>
